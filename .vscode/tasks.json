{
    "version": "2.0.0",
    "tasks": [
        {
            // This label matches the "preLaunchTask" in launch.json
            "label": "Build C++ for Debug", 
            "type": "shell",
            // This is your correct compiler path
            "command": "/opt/homebrew/bin/g++-15", 
            "args": [
                "-g", // IMPORTANT: This flag adds debug information
                "-std=c++17",
                "-Wno-cpp", // This still hides warnings
                "${file}",
                // THIS IS THE CHANGE:
                "-isystem${workspaceFolder}", // Use this instead of -I
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}